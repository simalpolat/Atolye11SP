using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace bu_kaç_oldu_sayamadım
{
	public partial class Form1 : Form
	{
		Random rndm = new Random();
		string[] kelimeler = { "KÖPEK", "TAPİR", "LAGOSE", "BABİL", "BİZON", "TIRTIL", "BOĞA", "SİVRİSİNEK", "YENGEÇ", "TAVUK" };
		public string randomkelime; //her yerden erişelim diye public verdim.
		public int gecici;
		public string[] harf;
		public int imageNumber = 0;
		public int cansayisi;
		public Form1()
		{
			InitializeComponent();
		}

		private void buttonbasla_Click(object sender, EventArgs e)
		{
			cansayisi= 4;
			listBox1.Items.Clear();
			gecici = rndm.Next(0, kelimeler.Length);
			randomkelime = kelimeler[gecici];
			randomkelime = randomkelime.ToUpper();  // istediğim gibi büyük harfle çağırsın diye to upper kullandım ^^
			listBox1.Items.Add(randomkelime);
			harf = new string[randomkelime.Length];

			label1.Text = " ";
			labell2.Text = cansayisi.ToString();
			for (int i = 0; i < randomkelime.Length; i++) //hocam dersiniz de kabul etmem gerekiyor pek iyi değildim ama
														  //for'u çok iyi öğrendim ve söz verdiğim gibi artık çalışıyorum!!  
			{
				harf[i] = "_";
				label1.Text = harf[i] + " ";
			}
		}
		public string kelime;

		private void buttonkelime_Click(object sender, EventArgs e)
		{
			string kelime= textBox1.Text.ToUpper();  
			if (kelime == randomkelime)
			{
				for (int a = 0; a < randomkelime.Length; a++) 
				{
					harf[a] = kelime[a].ToString();
				}
			}
			else
			{
				cansayisi--;
				imageNumber++;
				pictureBox1.Image= imagelistele.Images[imageNumber];//hocam bu komutu araştırırken öğrendim image'leri  kontrol etmek için kullanılıyormuş ^^

				if (cansayisi == 0)
				{
					MessageBox.Show("Üzgünüm kaybettiniz!", "Uyarı", MessageBoxButtons.OK, MessageBoxIcon.Information); //Bunları ben aslında 'MessageBoxButtons.AbortRetryIgnore' ile yapardım ama bu daha iyi dediği için yavuzuz dinledim
					label1.Text = "";                                                                                  //hocam sizce hangisi?	
		      	}																									  //else  kullanmamak gibiyse -10 yedim mi :D																											
			}

	      	 if (randomkelime == kelime) //hocam belki güler belki kızarsınız ama ben gidip else'ten sonra else if açmaya çalışarak hata yedim lşkhfşldhfs (random gülmek için kullanılıyor)
			 {
					MessageBox.Show("Kazandınız!!", "Uyarı", MessageBoxButtons.OK, MessageBoxIcon.Information);
		     }
			 label1.Text = "";
			 labell2.Text= cansayisi.ToString();

			for (int s= 0; s< randomkelime.Length; s++)
			{
				label1.Text += harf[s] + " ";
			}
		}

		private void sonuncu_Click(object sender, EventArgs e)
		{
			string kelime = textBox1.Text.ToUpper();
			bool döngü = false;
			for (int z = 0; z < randomkelime.Length; z++)
			{
				if (kelime[0]== randomkelime[z])
				{
					harf[z]= kelime[0].ToString();
					döngü = true;
				}
			}

			if (döngü== false)
			{
				cansayisi--;
				imageNumber++;
				pictureBox1.Image = imagelistele.Images[imageNumber];	
			}
			labell2.Text= cansayisi.ToString();		
			if(cansayisi==0)
			{
				MessageBox.Show("Üzgünüm kaybetti", "Uyarı", MessageBoxButtons.OK, MessageBoxIcon.Information);
				label1.Text = "";
			}
			if (randomkelime == kelime)
			{
				MessageBox.Show("Kazandınız!!", "Uyarı" , MessageBoxButtons.OK, MessageBoxIcon.Information);
				label1.Text = "";
			}
			label1.Text = " ";
			for(int c= 0; c<randomkelime.Length; c++)
			{
				label1.Text += harf[c] + " ";
			}
		}

		private void cansayi_Click(object sender, EventArgs e)
		{
			pictureBox1.Image = imagelistele.Images[imageNumber];
		}
	}
}
